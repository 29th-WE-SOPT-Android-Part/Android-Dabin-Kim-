<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOPT_assignment_dabin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:includeFontPadding">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--theme안보이게 -->

    </style>

    <!--bottomnavigation폰트 적용-->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosanskr_medium</item>
    </style>

    <!--tablayout-->
    <style name="tab_text_style">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="tab_style">
        <item name="tabIndicatorColor">@color/sopt</item>
        선택됐을때 밑줄
        <item name="tabIndicatorHeight">3dp</item>
        밑줄 굵기
        <item name="tabTextAppearance">@style/tab_text_style</item>
        tab_text_style 적용
        <item name="tabSelectedTextColor">@color/sopt</item>
        선택됐을때 글씨 색
        <item name="tabTextColor">@color/hintGray</item>
        선택안됐을때 글씨색
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <!--        <item name="android:background">@drawable/custom_inactive_tab_indicator</item>-->


    </style>

</resources>