<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SOPTHub"
        android:textColor="@color/sopt"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_jjangu"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/sopthub_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="이름"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_jjangu"
        app:layout_constraintStart_toStartOf="@+id/iv_jjangu"
        app:layout_constraintTop_toBottomOf="@+id/iv_jjangu" />

    <TextView
        android:id="@+id/tv_myintroduce"
        android:layout_width="wrap_content"
        android:textSize="50dp"
        android:text="소개소개소개소개"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_myname"
        app:layout_constraintStart_toStartOf="@+id/tv_myname"
        app:layout_constraintTop_toBottomOf="@+id/tv_myname" />

</androidx.constraintlayout.widget.ConstraintLayout>